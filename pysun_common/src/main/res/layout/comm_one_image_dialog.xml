<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/comm_one_img_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/comm_one_img"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.821"
            android:layout_height="0dp"
            android:contentDescription="@null"
            app:layout_constraintDimensionRatio="h,308:318"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/comm_one_img_close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="21dp"
            android:contentDescription="@null"
            android:padding="12dp"
            android:src="@mipmap/comm_ic_pop_white_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/comm_one_img" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>